<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendclassapps">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_attend_class_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashScreen"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.QrGeneratorActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".activities.ReaderActivity" />
        <activity
            android:name=".activities.QrViewActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.ClassScheduleActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            android:label="@string/title_activity_class_schedule" />
        <activity
            android:name=".activities.StudentListViewActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.StudentSendDataToFirebaseActivity" />
        <activity
            android:name=".activities.UserSignInToFirebaseActivity"/>
    </application>

</manifest>